<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:color="#757373" android:width="1dp"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Dropdown arrow -->
    <item android:drawable="@drawable/baseline_arrow_drop_down_24" android:gravity="right|center_vertical"
        android:paddingRight="10dp">
    </item>

</layer-list>
